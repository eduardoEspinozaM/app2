<div class="right_col" role="main">
    <div class="">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <a href="<%= new_autor_path %>"><i class="fa fa-address-book fa-lg"></i>  AUTORES</a>
                        <div class="row">
                            <div class="col-sm-12">
                                <table id="link_to" class="table table-striped table-bordered ">
                                    <thead>
                                        <ul class="nav navbar-right panel_toolbox">
                                            <a class="close-link">
                                            <%= link_to 'Nuevo', new_autor_path, class:"btn btn-success btn-lg fa fa-share-square-o fa-lg" %></a>
                                        </ul>
                                        <tr>
                                            <th>Proyecto</th>
                                            <th>Nombre</th>
                                            <th>Apellido</th>
                                            <th>Ver</th>
                                            <th>Editar</th>
                                            <th>Eliminar</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% @autors.each do |autor| %>
                                        <tr>
                                            
                                            <td><%= autor.proyect.title %></td>
                                            <td><%= autor.nombre %></td>
                                            <td><%= autor.apellido %></td>
                                            <td><%= link_to '', autor, class: "btn btn-round btn-success fa fa-eye fa-2x" %></td>
                                            <td><%= link_to '', edit_autor_path(autor), class: "btn btn-round btn-primary fa fa-pencil-square-o fa-2x" %> </td>
                                            <td><%= link_to '', autor, method: :delete, data: { confirm: '¿Estás seguro?' },class:"btn btn-round btn-danger fa fa-trash-o fa-2x" %>
                                            </td>
                                        </tr>
                                        <% end %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function() {
    $('#link_to').DataTable( {
        responsive: true,
        "bProcessing": true,
        //"sPaginationType": "full_numbers",
        "paging": true,
        "iDisplayLength": 10,
        "bPaginate": true,
        "bSort": true,
        "oLanguage": {
            "oPaginate": {
                "sPrevious": "←",
                "sNext": "→",
                "sLast": "»",
                "sFirst": "«"
            },
            "sProcessing": "Procesando...",
            "sLengthMenu": "Mostrar _MENU_ registros",
            "sZeroRecords": "No se encontraron resultados",
            "sEmptyTable": "Ningún dato disponible en esta tabla",
            "sInfo": "Mostrando de _START_ al _END_ de _TOTAL_ registros",
            //"sInfo": "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
            "sInfoEmpty": "Mostrando del 0 al 0 de 0 registros",
            "sInfoFiltered": "(filtrado de un total de _MAX_ registros)",
            "sInfoPostFix": "",
            "sSearch": "Buscar: ",
            "sUrl": "",
            "sInfoThousands": ".",
            "sLoadingRecords": "Cargando...",
            "oAria": {
                "sSortAscending": ": Activar para ordenar la columna de manera ascendente",
                "sSortDescending": ": Activar para ordenar la columna de manera descendente"
            }
        }
    } );
    } );
</script>