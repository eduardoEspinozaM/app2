                        <label>buscar:<input type="search" class="form-control input-sm" placeholder="" aria-controls="datatable">
                        </label>
                     </div>
                  </div>
               </div>
               <ul class="nav navbar-right panel_toolbox">
                  <a class="close-link">
                  <%= link_to 'Nuevo', new_autor_path, class:"btn btn-success btn-lg fa fa-share-square-o fa-lg" %></a>
               </ul>
               <div class="row">
                  <div class="col-sm-12">
                     <table id="link_to" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info">
                        <thead>
                           <tr>
                            <th>#</th>
                             <th>Foto del autor</th>
                              <th>Nombre</th>
                              <th>Apellido</th>
                              <th colspan="3"></th>
                           </tr>
                        </thead>
                        <tbody>
                           <% @autors.each do |autor| %>
                           <tr>
                                <th scope="row">1</th>
                               <td><%= autor.nombre %></td>
                              <td><%= autor.nombre %></td>
                              <td><%= autor.apellido %></td>
                              <td><%= link_to ' ver', autor, class: "btn btn-round btn-success fa fa-pencil-square-o fa-external-link" %> |
                                 <%= link_to ' Editar', edit_autor_path(autor), class: "btn btn-round btn-primary fa fa-pencil-square-o fa-lg" %> |
                                 <%= link_to ' Eliminar', autor, method: :delete, data: { confirm: '¿Estás seguro?' },class:"btn btn-round btn-danger fa fa-trash-o fa-lg" %>
                              </td>
                           </tr>
                           <% end %>
                        </tbody>
                     </table>
                  </div>
               </div>
               <div class="row">
                  <div class="col-sm-5">
                     <div class="dataTables_info" id="datatable_info" role="status" aria-live="polite">Showing 1 to 10 of 57 entries</div>
